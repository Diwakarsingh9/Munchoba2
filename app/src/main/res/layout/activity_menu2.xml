<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="#bbbbbb">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#a61c1e">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:layout_weight="0.89"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:background="@drawable/border_image"
                android:layout_gravity="left|center"
                android:src="@drawable/userdefault"
                android:id="@+id/profilepic"
                android:layout_marginBottom="4dp"
                android:focusableInTouchMode="false"
                android:adjustViewBounds="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_margin="4dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:id="@+id/layout223322">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name"
                    android:id="@+id/nametv"
                    android:textColor="#000"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="View Profile"
                    android:id="@+id/viewprof"
                    android:textColor="#000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Edit Profile"
                    android:id="@+id/editprofile"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/mygoals"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:gravity="left|center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageVigoals"
                android:background="@drawable/goals"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="My Goals"
                android:id="@+id/textView7"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fitnessdetails"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:gravity="left|center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/details"
                android:background="@drawable/fitnessdetails"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fitness Details"
                android:textColor="#000"
                android:id="@+id/textView8"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
           android:id="@+id/photoslayout"
            android:background="#ffffff"
            android:layout_weight="1"
            android:gravity="left|center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/photos"
                android:background="@drawable/photos"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Photos"
                android:id="@+id/textView1"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginBottom="2dp"
            android:id="@+id/videosla"
            android:layout_weight="1"
            android:gravity="left|center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/video"
                android:background="@drawable/video"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Videos"
                android:id="@+id/textView11"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:id="@+id/pagesla"
            android:background="#ffffff"
            android:gravity="left|center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView11"
                android:background="@drawable/pages"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pages"
                android:id="@+id/textView12"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/logout"
            android:background="#ffffff"
            android:gravity="left|center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView9"
                android:background="@drawable/logout"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Log Out"
                android:id="@+id/textView1112"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
