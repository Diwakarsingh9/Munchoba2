<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:id="@+id/parallex"
    app:parallax_factor="1.9"
    android:background="#bbbbbb"
    android:gravity="center">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">


        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
           >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="top|center"
    android:gravity="center"
    android:background="#a61c1e">

</LinearLayout>
            <com.pkmmte.view.CircularImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/dppic"
                app:civ_border="true"
                app:civ_borderColor="#ffffff"
                app:civ_borderWidth="4dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="20dp"
                android:src="@drawable/userdefault"
                />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:gravity="left|center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAME OF USER"
                    android:textColor="#a61c1e"
                    android:background="#ffffff"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:id="@+id/nameofuser"
                    android:layout_weight="1" />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spotters"
                android:textColor="#a61c1e"
                android:background="#ffffff"
                    android:textSize="16dp"
                android:textStyle="italic"
                android:id="@+id/spottersuser"
                    android:layout_marginLeft="10dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="#a61c1e"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spotting"
                    android:textColor="#a61c1e"
                    android:background="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="italic"
                    android:id="@+id/spottinguser"
                    android:layout_marginRight="15dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:background="#a61c1e"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:id="@+id/stat"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textColor="#000" />
    <View
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="#a61c1e"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photos"
                    android:id="@+id/phot"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textColor="#000" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="#a61c1e"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videos"
                    android:textSize="15dp"
                    android:id="@+id/vid"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/pb333"
                    android:background="@drawable/progressbar"
                    android:layout_gravity="center"
                    android:visibility="gone" />
                <ListView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listView"
                    android:layout_gravity="center"
                    android:background="#bbbbbb"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

